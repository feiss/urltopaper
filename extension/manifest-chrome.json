{
  "manifest_version": 2,
  "name": "UrlToPaper",
  "version": "0.2.1",

  "description": "Personal URL shortener",
  "homepage_url": "https://github.com/feiss/urltopaper",

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "96": "icon-96.png",
    "128": "icon-128.png"
  },

  "permissions": [
    "activeTab", "storage"
  ],

  "browser_action": {
    "default_icon": "icon-48.png",
    "default_title": "UrlToPaper",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["urltopaper.js"]
    }
  ]

}
